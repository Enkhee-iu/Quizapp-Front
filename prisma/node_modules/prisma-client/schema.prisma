generator client {
  provider = "prisma-client-js"
  output   = "node_modules/prisma-client"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id           String   @id @default(uuid())
  userId       String
  originalText String
  summary      String
  createdAt    DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  imageUrl  String?
  createdAt DateTime @default(now())
}