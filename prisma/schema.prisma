generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id           String   @id @default(uuid())
  userId       String
  originalText String
  summary      String
  createdAt    DateTime @default(now())
}
