generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql" // эсвэл mysql / sqlite
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String
  createdAt DateTime @default(now())

  articles  Article[]
}


// Хэрэв та Quiz үүсгэж байгаа бол Quiz модел бас хэрэг болно
model Quiz {
  id        String   @id @default(cuid())
  articleId String
  data      Json     // AI-аас ирсэн асуултуудыг хадгалах
  createdAt DateTime @default(now())
}

model Article {
  id           String   @id @default(cuid())
  userId       String
  originalText String
  summary      String
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [clerkId])
}
